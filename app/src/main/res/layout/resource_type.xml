<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="12dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="6dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/icon_container"
            android:layout_margin="12dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="7dp">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@color/white"
                android:src="@color/teal_200"
                android:scaleType="centerCrop"
                android:id="@+id/resource_icon"/>

        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/name_of_resource"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/icon_container"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:layout_toEndOf="@+id/icon_container"
            android:fontFamily="sans-serif-medium"
            android:text="Resource name"
            android:textColor="#222"
            android:textSize="18sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:textSize="14sp"
            android:textColor="#0E1C2B"
            android:fontFamily="sans-serif-light"
            android:text="Pro tip"
            android:layout_toEndOf="@+id/icon_container"
            android:layout_below="@+id/name_of_resource"
            android:id="@+id/Pro_tip"
            />



    </RelativeLayout>

</androidx.cardview.widget.CardView>